@model Candidature

<div class="candidature-info">
    <h3 class="card-title">@Model.FirstName @Model.LastName</h3>
    <p class="card-text">@Model.Email</p>
    <p class="card-text">@Model.PhoneNumber</p>
    <p class="card-text">@Model.LevelOfStudy</p>
    <div class="btns">
        <a href="~/@Model.CVUrl" class="read-cv">CV</a>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn-details">Détails</a>
        <button type="button" class="btn-delete">Supprime</button>
    </div>
</div>

