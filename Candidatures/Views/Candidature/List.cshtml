@model IEnumerable<Candidature> 

@{
    ViewData["Title"] = "List des candidature";
}

<div class="container">
    <div class="search-section">
        <h3 class="display-4">Toute les candidatures</h3>
       <div>
           <form action="Search">
                <input type="text" placeholder="Recherche" />
                <button type="submit" class="btn btn-success" asp-action="Search">Rechercher</button>
           </form>
       </div>
    </div>
    <hr />
    <div class="row">
        @if (Model.Any())
        {
            foreach (var candidature in Model)
            {
                <div class="col-md-4">
                    <partial name="_CandidatureThumbnail" model="candidature" />
                </div>
            }

        }
        else
        {
            <h3 class="display-4">Il n’y a pas de candidatures</h3>
        }
    </div>
</div>